{% extends 'base.html.twig' %}

{% block title %} List of Players {% endblock %}

{% block body %}
    <h1> List of Players: </h1>

    <ul>
        {% for player in players %}
            <li>
                {#Id: {{ player.id }} <br>#}
                {#Name: #}
                <a href="{{ url('player_show', {id: player.id}) }}"> {{ player.firstName }} {{ player.surname }} </a> <br>
                {#Age: {{ player.age }} <br>#}
                {#Nationality: {{ player.nationality }} <br>#}
                {#Club: {{ player.clubName }} <br>#}
            </li>
        {% endfor %}
    </ul>
    <br>
    <p>
        <a href="{{ url('player_create_new') }}"> Add New Player</a>
    </p>
    <p>
        <a href="{{ url('homepage') }}"> Home Page </a>
    </p>
{% endblock %}